@page
@model CreateModel
@{
    ViewData["Title"] = "Create Playlist";
}

<h2>Create Playlist</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaylistRequest.Genres" class="control-label"></label>
                <select name="genreId" asp-items="Model.Genres"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlaylistRequest.Duration" class="control-label"></label>
                <input asp-for="PlaylistRequest.Duration" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create Playlist!" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}